#!/usr/bin/env node

path = require('path')
fs = require('fs')

bin_full_path = fs.realpathSync(__filename)
bin_dir = path.dirname(fs.realpathSync(__filename))
lib_dir = path.join(bin_dir, '../lib')
lib = path.join(lib_dir, 'slowjam.js')

slowjam = require(lib)
jam = new slowjam.SlowJam()
jam.slowness = 1000
jam.log = true

jam.load('/Users/hugs/Projects/slowjam/src/examples/hello-litcoffee.litcoffee')
//jam.load('/Users/hugs/Projects/slowjam/src/examples/hello-coffee.coffee')
//jam.load('/Users/hugs/Projects/slowjam/src/examples/hello-js.js')
jam.play()

